{
  "name": "live-cam-clock",
  "version": "0.0.1",
  "description": "Clock on the Live Cam.",
  "main": "lib/bundle.main.js",
  "scripts": {
    "help": "npm-run-help",
    "build:html": "jade src/jade/index.jade -P -o ./",
    "watch:html": "jade -w src/jade/index.jade -P -o ./",
    "build:css": "stylus src/stylus/index.styl --sourcemap-inline -o lib/index.css",
    "watch:css": "stylus -w src/stylus/index.styl --sourcemap-inline -o lib/index.css",
    "build:main:js": "browserify src/js/main.js --node -x app -x browser-window -x crash-reporter -t babelify -o lib/bundle.main.js -d",
    "watch:main:js": "watchify src/js/main.js --node -x app -x browser-window -x crash-reporter -t babelify -o lib/bundle.main.js -d -v",
    "build:renderer:js": "browserify src/js/index.js --node -x remote -t babelify -o lib/bundle.js -d",
    "watch:renderer:js": "watchify src/js/index.js --node -x remote -t babelify -o lib/bundle.js -d -v",
    "build": "npm-run-all -p build:* build:*:*",
    "watch": "npm-run-all -p watch:* watch:*:*",
    "vendor:copy": "cpx -L \"./node_modules/@all-user/*/dist/**/*\" vendor/@all-user",
    "vendor": "npm run vendor:copy",
    "pack:osx": "electron-packager ./ LiveCamClock --platform=darwin --arch=x64 --version=0.37.8 --out=./dist --icon=./images/live-cam-clock.icns --overwrite",
    "pack": "npm-run-all -p pack:*",
    "archive": "mkdir -p dist/osx && zip -r 'dist/osx/POET-osx.zip' 'dist/POET-darwin-x64'",
    "release": "npm-run-all -s vendor build pack",
    "start": "electron ./"
  },
  "author": "Keita Okamoto<ok@aaa.email.ne.jp>",
  "license": "MIT",
  "devDependencies": {
    "@all-user/ok-blocks": "0.0.7",
    "@all-user/ok-patterns-lines": "0.1.0",
    "@all-user/ok-patterns-olympic2020": "0.0.3",
    "babel-cli": "^6.4.0",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2016": "^6.0.11",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "cpx": "^1.3.1",
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^0.37.8",
    "eslint": "^2.9.0",
    "jade": "^1.11.0",
    "key-string": "^0.1.0",
    "lodash": "^4.12.0",
    "moment": "^2.13.0",
    "nib": "^1.1.0",
    "npm-run-all": "^1.5.0",
    "npm-run-help": "^1.1.0",
    "stylus": "^0.54.5",
    "watchify": "^3.7.0"
  }
}
