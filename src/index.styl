$block_color = transparent
$masking_color = white

body
  padding 0
  margin 0
  width 100%
  height 100vh
  background $masking_color
  overflow hidden
  #video-wrapper
    position absolute
    top -100%
    bottom -100%
    left -100%
    right -100%
    margin auto
    z-index 0
    overflow hidden
    iframe
      display block
      position absolute
      top -100%
      bottom -100%
      left -100%
      right -100%
      margin auto
      z-index 0
  #wrapper
    position absolute
    top -100%
    bottom -100%
    left -100%
    right -100%
    margin auto
    background $block_color
    z-index 100
    .lines-emblem
      position absolute
